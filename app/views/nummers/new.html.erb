<h1>New nummer</h1>

<% form_for(@nummer) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :titel %><br />
    <%= f.text_field :titel %>
  </p>
  <p>
    <%= f.label :prijs %><br />
    <%= f.text_field :prijs %>
  </p>
  <p>
    <%= f.label :jaar %><br />
    <%= f.date_select :jaar, :start_year => 1900, :end_year => 2200, :include_blank => true %>
  </p>
  <p>
    <%= f.label :artiest %><br />
    <%= f.text_field :artiest %>
  </p>
  <p>
    <%= f.label :album %><br />
    <%= f.collection_select :album_id, Album.find(:all), :id, :titel %>
  </p>
  <p>
    <%= f.label :genre %><br />
    <%= select(:nummer, :genre, ["Blues", "Country", "Dance", "Diversen", "Folk", "Jazz", "Kind & Jeugd", "Klassiek", "Nederlands", "New Age", "Pop", "Rap & Hiphop", "R&B & Soul", "Reggae", "Religieus", "Rock & Alternative", "Soundtracks & Musicals", "Verzamel-cd's & Boxsets", "Wereldmuziek"]) %>
  </p>
  <p>
    <%= f.label :lengte %><br />
    <%= f.text_field :lengte %>
  </p>
  <p>
    <%= f.label :tracknr %><br />
    <%= f.text_field :tracknr %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', nummers_path %>
