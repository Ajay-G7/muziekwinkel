<h1>Listing albums</h1>

<table>
  <tr>
    <th>Titel</th>
    <th>Prijs</th>
    <th>Jaar</th>
    <th>Artiest</th>
    <th>Genre</th>
    <th>Lengte</th>
    <th>Coverart</th>
  </tr>

<% for album in @albums %>
  <tr>
    <td><%=h album.titel %></td>
    <td><%=h album.prijs %></td>
    <td><%=h album.jaar %></td>
    <td><%=h album.artiest %></td>
    <td><%=h album.genre %></td>
    <td><%=h album.lengte %></td>
    <td><%=h album.coverart %></td>
    <td><%= link_to 'Show', album %></td>
    <td><%= link_to 'Edit', edit_album_path(album) %></td>
    <td><%= link_to 'Destroy', album, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New album', new_album_path %>
