<h1>Editing album</h1>

<% form_for(@album) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :titel %><br />
    <%= f.text_field :titel %>
  </p>
  <p>
    <%= f.label :prijs %><br />
    <%= f.text_field :prijs %>
  </p>
  <p>
    <%= f.label :jaar %><br />
    <%= f.date_select :jaar, :start_year => 1900, :end_year => 2200, :include_blank => true %>
  </p>
  <p>
    <%= f.label :artiest %><br />
    <%= f.text_field :artiest %>
  </p>
  <p>
    <%= f.label :genre %><br />
    <%= select(:album, :genre, ["Blues", "Country", "Dance", "Diversen", "Folk", "Jazz", "Kind & Jeugd", "Klassiek", "Nederlands", "New Age", "Pop", "Rap & Hiphop", "R&B & Soul", "Reggae", "Religieus", "Rock & Alternative", "Soundtracks & Musicals", "Verzamel-cd's & Boxsets", "Wereldmuziek"]) %>
  </p>
  <p>
    <%= f.label :lengte %><br />
    <%= f.text_field :lengte %>
  </p>
  <p>
    <%= f.label :coverart %><br />
    <%= f.text_field :coverart %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @album %> |
<%= link_to 'Back', albums_path %>
