<h1>Editing album</h1>

<% form_for(@album) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :titel %><br />
    <%= f.text_field :titel %>
  </p>
  <p>
    <%= f.label :prijs %><br />
    <%= f.text_field :prijs %>
  </p>
  <p>
    <%= f.label :jaar %><br />
    <%= f.date_select :jaar, :start_year => 1900, :end_year => 2200, :include_blank => true %>
  </p>
  <p>
    <%= f.label :artiest %><br />
    <%= f.text_field :artiest %>
  </p>
  <p>
    <%= f.label :genre %><br />
    <%= select( :genre, @genre, { "Blues" => "1", "Country" => "2", "Dance" => "3", "Diversen" => "4", "Folk" => "5", "Jazz" => "6", "Kind & Jeugd" => "7", "Klassiek" => "8", "Nederlands" => "9", "New Age" => "10", "Pop" => "11", "Rap & Hiphop" => "12", "R&B & Soul" => "13", "Reggae" => "14", "Religieus" => " 15", "Rock & Alternative" => "16", "Soundtracks & Musicals" => "17", "Verzamel-cd's & Boxsets" => "18", "Wereldmuziek" => "19" }) %>
  </p>
  <p>
    <%= f.label :lengte %><br />
    <%= f.text_field :lengte %>
  </p>
  <p>
    <%= f.label :coverart %><br />
    <%= f.text_field :coverart %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @album %> |
<%= link_to 'Back', albums_path %>
