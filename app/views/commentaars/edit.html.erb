<h1>Editing commentaar</h1>

<% form_for(@commentaar) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :product %><br />
    <%= f.collection_select :product_id, Product.find(:all).sort_by {|item| item.titel}, :id, :titel %>
  </p>
  <p>
    <%= f.label :klant %><br />
    <%= f.collection_select :klant_id, Klant.find(:all).sort_by {|item| item.naam_omgekeerd}, :id, :naam_omgekeerd %>
  </p>
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.label :rating %><br />
    <%= f.text_field :rating %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @commentaar %> |
<%= link_to 'Back', commentaars_path %>
